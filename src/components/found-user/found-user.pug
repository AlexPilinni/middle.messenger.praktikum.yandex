div(class="found-user-item" id=id)
  avatarComponent(data="avatar" class="found-user-item__avatar")
  span(class="found-user-item__name")=fullName
  if iconType === 'add'
    button(type="button" disabled=iconDisabled class="found-user-item__btn-icon")
      include ../../../static/images/plus.svg
  if iconType === 'delete'
    button(type="button" disabled=iconDisabled class="found-user-item__btn-icon")
      include ../../../static/images/minus.svg
